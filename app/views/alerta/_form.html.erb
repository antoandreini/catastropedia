<%= form_with(model: alertum, local: true) do |form| %>
  <% if alertum.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(alertum.errors.count, "error") %> prohibited this alertum from being saved:</h2>

      <ul>
      <% alertum.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= form.label :título , :style => "font-weight:bold;color:#ddd"%> <span style="font-weight:bold;color:#ddd;text-decoration:underline">*</span>
    <%= form.text_field :titulo, :class=>"form-control" %>
  </div>

