

<h1>Catastropedia</h1>

<table>
  <thead>
    <tr>
      <th>Titulo</th>
      <th>Zonas</th>
      <th>Fecha</th>
      <th>Descripcion</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @alerta.each do |alertum| %>
      <tr>
        <td><%= alertum.titulo %></td>
        <td><%= alertum.zonas %></td>
        <td><%= alertum.fecha %></td>
        <td><%= alertum.descripcion %></td>
        <td><%= link_to 'Show', alertum %></td>
        <td><%= link_to 'Edit', edit_alertum_path(alertum) %></td>
        <td><%= link_to 'Destroy', alertum, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

