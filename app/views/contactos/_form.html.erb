<%= form_with(model: contacto, local: true) do |form| %>
  <% if contacto.errors.any? %>
    <div id="form-group">
      <div class="row">
      <div class="col">
      <ul>
      <% contacto.errors.full_messages.each do |message| %>
        <div class="alert alert-light" style="font-weight:bold;color:#C70E0B" align="center" role="alert">
          <%= message %>
        </div>
      <% end %>
      </ul>
    </div>
    </div>
    </div>
  <% end %>
<div class="row">
<div class="col">
  <div class="form-group">
    <%= form.label :asunto , :style => "font-weight:bold;color:#ddd"%> <span style="font-weight:bold;color:#ddd;text-decoration:underline">*</span><span class="sr-only">Campo requerido</span>
    <%= form.text_field :asunto, :class=>"form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :email , :style => "font-weight:bold;color:#ddd"%> <span style="font-weight:bold;color:#ddd;text-decoration:underline">*</span><span class="sr-only">Campo requerido</span>
    <%= form.email_field  :email, :class=>"form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :mensaje  , :style => "font-weight:bold;color:#ddd"%> <span style="font-weight:bold;color:#ddd;text-decoration:underline">*</span><span class="sr-only">Campo requerido</span>
    <%= form.text_area :mensaje, :class=>"form-control" , :rows=>"5" %>
  </div>

  <div class="actions">
    <%= form.submit  "Enviar mensaje", :class => "btn btn-block", :style => "background-color:#ddd;font-weight:bold;color:#001F3F" %>
  </div>
</div>
</div>
<% end %>
