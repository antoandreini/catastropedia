<p id="notice"><%= notice %></p>

<h1>Novedads</h1>

<table>
  <thead>
    <tr>
      <th>Titulo</th>
      <th>Fecha</th>
      <th>Copete</th>
      <th>Imagen</th>
      <th>Altimg</th>
      <th>Contenido</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @novedads.each do |novedad| %>
      <tr>
        <td><%= novedad.titulo %></td>
        <td><%= novedad.fecha %></td>
        <td><%= novedad.copete %></td>
        <td><%= novedad.imagen %></td>
        <td><%= novedad.altimg %></td>
        <td><%= novedad.contenido %></td>
        <td><%= link_to 'Show', novedad %></td>
        <td><%= link_to 'Edit', edit_novedad_path(novedad) %></td>
        <td><%= link_to 'Destroy', novedad, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

